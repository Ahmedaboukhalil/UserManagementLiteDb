@model UserManagementLiteDb.ViewModels.CreateUserViewModel

@{
    ViewData["Title"] = "CreateUser";
}

<form method="post">
    <fieldset class="mb-3">
        @*<legend class="text-uppercase font-size-sm font-weight-bold">إضافة مستخدم جديد</legend>*@
        <hr />

        <div class="form-group row">
            <label class="col-form-label col-lg-2" asp-for="FullName"></label>
            <div class="col-lg-10">
                <input type="text" asp-for="FullName" class="form-control">
                <span asp-validation-for="FullName" class="form-text text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label class="col-form-label col-lg-2" asp-for="Email"></label>
            <div class="col-lg-10">
                <input type="text" asp-for="Email" class="form-control">
                <span asp-validation-for="Email" class="form-text text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label class="col-form-label col-lg-2" asp-for="Password"></label>
            <div class="col-lg-10">
                <input type="password" asp-for="Password" class="form-control">
                <span asp-validation-for="Password" class="form-text text-danger"></span>
            </div>
        </div>

        @*<div class="form-group row">
                <label class="col-form-label col-lg-2" asp-for="ConfirmPassword"></label>
                <div class="col-lg-10">
                    <input type="password" asp-for="ConfirmPassword" class="form-control">
                    <span asp-validation-for="ConfirmPassword" class="form-text text-danger"></span>
                </div>
            </div>*@

    </fieldset>

    <div class="text-right">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>
